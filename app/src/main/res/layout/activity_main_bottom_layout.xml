<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_gravity="bottom"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:id="@+id/main_bottom_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bottom_layout_height"
        android:layout_alignParentBottom="true"
        android:background="@color/main_bottom_layout_color"
        android:clipChildren="false"
        android:clipToPadding="false"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:id="@+id/main_bottom_generate_layout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/main_bottom_layout_height"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/main_bottom_generate_img"
                android:src="@drawable/icon_qrcode"
                android:layout_width="@dimen/main_bootom_img_height"
                android:layout_height="@dimen/main_bootom_img_height" />

            <TextView
                android:id="@+id/main_bottom_generate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_bottom_text_size"
                android:text="@string/generate" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/main_bootom_scan_img_width"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/main_bottom_collection_layout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/main_bottom_layout_height"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/main_bottom_collection_img"
                android:src="@drawable/icon_record"
                android:layout_width="@dimen/main_bootom_img_height"
                android:layout_height="@dimen/main_bootom_img_height" />

            <TextView
                android:id="@+id/main_bottom_collection_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_bottom_text_size"
                android:text="@string/collection" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/main_bottom_scan_btn"
        android:src="@drawable/icon_scan"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/main_bootom_scan_img_padding"
        android:background="@drawable/main_scan_img_background"
        android:layout_width="@dimen/main_bootom_scan_img_width"
        android:layout_height="@dimen/main_bootom_scan_img_height" />
</RelativeLayout>

