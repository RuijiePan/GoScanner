<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_layout"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/activity_top_back"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:scaleType="center"
        android:src="@drawable/ic_back"/>

    <TextView
        android:id="@+id/activiy_top_text"
        android:layout_toRightOf="@+id/activity_top_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="20sp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="Create"
        android:textColor="@color/black"/>

    <!--编辑icon-->
    <ImageView
        android:id="@+id/top_edit_btn"
        android:src="@drawable/icon_edit_selector"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_toLeftOf="@+id/activiy_top_text"
        android:layout_marginLeft="4dp"
        android:scaleType="center"
        android:visibility="gone"
        android:layout_gravity="center_vertical"/>

    <!--保存icon-->
    <ImageView
        android:id="@+id/top_save_btn"
        android:src="@drawable/ic_created_save"
        android:layout_toLeftOf="@+id/activiy_top_text"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:scaleType="center"/>

</LinearLayout>