<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="56dp">
    <ImageView
        android:id="@+id/detail_delete_btn"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:paddingLeft="12dp"
        android:src="@drawable/ic_created_delete"
        />
    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:paddingLeft="12dp">
        <EditText
            android:id="@+id/detail_tag_edittext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:maxLines="1"
            android:hint="Types"
            android:textSize="16sp"
            android:inputType="text"/>
        <View
            android:id="@+id/tag_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line_color"></View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="8dp">
        <EditText
            android:id="@+id/detail_edit_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:textSize="16sp"
            android:maxLines="1"
            android:inputType="text"/>
        <View
            android:id="@+id/value_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line_color"></View>
    </LinearLayout>

    <Button
        android:id="@+id/detail_paste_btn"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:background="@color/white"
        android:textSize="12dp"
        android:layout_marginRight="16dp"
        android:textStyle="bold"
        android:text="paste"/>
</LinearLayout>